import string
class Leaf:
  def __init__(self, question, left=None, right=None):
    self.question = question
    self.left = left
    self.right = right
def yes(query):
  while True:
    ans = input(query)
    ans = string.lower(ans[0:1])
    if ans == 'y':
      return True
    else:
      return False
knowledge  = Leaf("bird")
def mainfunc():
  while True:
    print
    if not yes("Are you thinking of an animal? "):
      break
    p = knowledge
    while p.left != None:
      if yes(p.question+"? "):
        p=p.right
      else:
        p=p.left
    if yes("Is it a " + p.question + "? "):
      continue
    thing = input("What is its name? ")
    question = input ("What question would distinguish a %s from a %s? "% (thing, p.question))
